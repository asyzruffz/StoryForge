<MudDialog>
    <DialogContent>
        <MudTextField @bind-Value="CharacterName" Label="@NameLabel" Variant="Variant.Outlined" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="ConfirmName">Confirm</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    IMudDialogInstance MudDialog { get; set; } = default!;

    [Parameter]
    public string NameLabel { get; set; } = "Name";

    string CharacterName { get; set; } = string.Empty;

    void Cancel() => MudDialog.Cancel();

    void ConfirmName()
    {
        MudDialog.Close(DialogResult.Ok(CharacterName));
    }
}
