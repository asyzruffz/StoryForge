<div class="@Class" style="@customStyle">
    @ChildContent
</div>

@code {
    [Parameter]
    public string? Class { get; set; }

    [Parameter]
    public string? Width { get; set; }

    [Parameter]
    public string? Height { get; set; }

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    string customStyle => $"{widthStyle}{heightStyle}";

    string widthStyle => Width is null ? string.Empty : $"width:{Width!};";
    string heightStyle => Height is null ? string.Empty : $"height:{Height!};";
}
