@using StoryForge.Application.Projects
@inherits LayoutComponentBase
@inject ISender sender;

<MudThemeProvider IsDarkMode="true" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar>
        @if (projectActive)
        {
            <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        }
        <NavCrumb />
    </MudAppBar>
    <MudDrawer @bind-Open="@drawerOpen">
        <NavMenu />
    </MudDrawer>
    <MudMainContent Class="mud-height-full">
        <MudContainer Class="py-4 overflow-y-auto mud-height-full">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool drawerOpen { get; set; } = true;
    bool projectActive { get; set; } = true;

    protected override async Task OnInitializedAsync()
    {
        var result = await sender.Send(new GetProjectSessionStatus());
        result.Then(isActive =>
        {
            drawerOpen = isActive;
            projectActive = isActive;
        });
    }

    void DrawerToggle()
    {
        drawerOpen = !drawerOpen;
    }
}
