@inject BreadCrumbHandler handler;

<MudBreadcrumbs Items="items">
    <SeparatorTemplate>
        <MudIcon Icon="@Icons.Material.Filled.ChevronRight" Size="Size.Small" />
    </SeparatorTemplate>
</MudBreadcrumbs>

@code {
    List<BreadcrumbItem> items = [
        new("General", href: "/", icon: Icons.Material.Filled.Dashboard)
    ];

    protected override void OnInitialized()
    {
        handler.NavigationChange += OnNavigationChanged;
    }

    void OnNavigationChanged()
    {
        items = handler.Items
            .Select(item => new BreadcrumbItem(item.Label, item.Path, disabled: item.Path is null, icon: item.Icon))
            .ToList();
        StateHasChanged();
    }
}
