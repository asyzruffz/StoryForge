@page "/general"
@inject BreadCrumbHandler crumbHandler;

<PageTitle>@Title</PageTitle>
<MudText Typo="Typo.h4" Class="mb-4">General Information</MudText>

<MudStack Row="true" Wrap="Wrap.Wrap" Spacing="4">
    <BookInfoCard />
    <AuthorInfoCard />
</MudStack>

@code {
    const string Title = "General";

    protected override void OnInitialized()
    {
        crumbHandler.Items.Clear();
        crumbHandler.Items.Add(new(Title, "/general", Icons.Material.Filled.Dashboard));
        crumbHandler.NavigationChange?.Invoke();
    }
}
