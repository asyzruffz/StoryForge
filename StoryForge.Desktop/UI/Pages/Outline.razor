@page "/outline"
@using StoryForge.Core.Data
@inject BreadCrumbHandler crumbHandler;

<PageTitle>@Title</PageTitle>
<MudText Typo="Typo.h4" Class="mb-4">@Title</MudText>

<MudStack Spacing="4">
    <MudStack Spacing="2">
        <MudText Typo="Typo.h6">Main</MudText>
        <ButtonList T="PlotEntry" Items="PlotList" PathPrefix="/outline" OnItemClick="OnPlotSelected" />
    </MudStack>
    <MudStack Spacing="2">
        <MudText Typo="Typo.h6">Secondary</MudText>
        <ButtonList T="PlotEntry" PathPrefix="/outline" OnItemClick="OnPlotSelected" />
    </MudStack>
    <MudStack Spacing="2">
        <MudText Typo="Typo.h6">Minor</MudText>
        <ButtonList T="PlotEntry" PathPrefix="/outline" OnItemClick="OnPlotSelected" />
    </MudStack>
</MudStack>

@code {
    const string Title = "Outline";

    List<PlotEntry> PlotList { get; } = [new PlotEntry(PlotId.New(), "Hero's Journey")];

    protected override void OnInitialized()
    {
        crumbHandler.Items.Clear();
        crumbHandler.Items.Add(new(Title, "/outline", Icons.Material.Filled.Webhook));
        crumbHandler.NavigationChange?.Invoke();
    }

    void OnPlotSelected(PlotEntry plot)
    {
        
    }
}
