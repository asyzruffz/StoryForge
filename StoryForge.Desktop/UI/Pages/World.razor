@page "/world"
@using StoryForge.Core.Data
@inject BreadCrumbHandler crumbHandler;

<PageTitle>@Title</PageTitle>
<MudText Typo="Typo.h4" Class="mb-4">@Title</MudText>

<MudStack Spacing="4">
    <MudStack Row="true" Justify="Justify.FlexEnd">
        <MudButton Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Add" Color="Color.Primary">New Location</MudButton>
    </MudStack>
    <ButtonList T="WorldEntry" Items="LocationList" PathPrefix="/world" OnItemClick="OnLocationSelected" />
</MudStack>

@code {
    const string Title = "World";

    List<WorldEntry> LocationList { get; } = [new WorldEntry(WorldSettingId.New(), "Gaia")];

    protected override void OnInitialized()
    {
        crumbHandler.Items.Clear();
        crumbHandler.Items.Add(new(Title, "/world", Icons.Material.Filled.NaturePeople));
        crumbHandler.NavigationChange?.Invoke();
    }

    void OnLocationSelected(WorldEntry plot)
    {
        
    }
}
