@page "/summary"
@inject BreadCrumbHandler crumbHandler;

<PageTitle>@Title</PageTitle>
<MudText Typo="Typo.h4">@Title</MudText>

<MudStack Class="mt-4">
    <MudTextField @bind-Value="Situation" Label="Situation" Variant="Variant.Outlined" />
    <MudTextField @bind-Value="SentenceSummary" Label="One-Sentence Summary" Lines="2" Variant="Variant.Outlined" />
    <MudText>Words: 0</MudText>
    <MudTextField @bind-Value="ParagraphSummary" Label="One-Paragraph Summary" Lines="8" Variant="Variant.Outlined" />
    <MudText>Words: 0</MudText>
</MudStack>

@code {
    const string Title = "Summary";

    public string Situation { get; set; } = string.Empty;
    public string SentenceSummary { get; set; } = string.Empty;
    public string ParagraphSummary { get; set; } = string.Empty;

    protected override void OnInitialized()
    {
        crumbHandler.Items.Clear();
        crumbHandler.Items.Add(new("Summary", "/summary", Icons.Material.Filled.Summarize));
        crumbHandler.NavigationChange?.Invoke();
    }
}
