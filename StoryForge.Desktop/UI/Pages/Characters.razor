@page "/characters"
@using StoryForge.Core.Data
@inject BreadCrumbHandler crumbHandler;
@inject ISender Sender;

<PageTitle>@Title</PageTitle>
<MudText Typo="Typo.h4" Class="mb-4">@Title</MudText>

<MudStack Spacing="4">
    <MudStack Row="true" Justify="Justify.FlexEnd">
        <MudButton Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Add" Color="Color.Primary">New Character</MudButton>
    </MudStack>
    <MudStack Spacing="2">
        <MudText Typo="Typo.h6">Main</MudText>
        <ButtonList T="CharacterEntry" Items="CharacterList" PathPrefix="/characters" OnItemClick="OnCharacterSelected" />
    </MudStack>
    <MudStack Spacing="2">
        <MudText Typo="Typo.h6">Secondary</MudText>
        <ButtonList T="CharacterEntry" Items="CharacterList" PathPrefix="/characters" OnItemClick="OnCharacterSelected" />
    </MudStack>
    <MudStack Spacing="2">
        <MudText Typo="Typo.h6">Minor</MudText>
        <ButtonList T="CharacterEntry" Items="CharacterList" PathPrefix="/characters" OnItemClick="OnCharacterSelected" />
    </MudStack>
</MudStack>

@code {
    const string Title = "Characters";

    List<CharacterEntry> CharacterList { get; set; } = [];

    protected override async Task OnInitializedAsync()
    {
        crumbHandler.Items.Clear();
        crumbHandler.Items.Add(new(Title, "/characters", Icons.Material.Filled.People));
        crumbHandler.NavigationChange?.Invoke();
    }

    void OnCharacterSelected(CharacterEntry character)
    {
        
    }
}
