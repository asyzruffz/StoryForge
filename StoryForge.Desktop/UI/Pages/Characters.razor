@page "/characters"
@using StoryForge.Application.Characters
@using StoryForge.Core.Data
@inject BreadCrumbHandler crumbHandler;
@inject IDialogService dialogService;
@inject ISender sender;

<PageTitle>@Title</PageTitle>
<MudText Typo="Typo.h4" Class="mb-4">@Title</MudText>

<MudStack Spacing="4">
    <MudStack Row="true" Justify="Justify.FlexEnd">
        <MudButton Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Add" Color="Color.Primary" OnClick="CreateNewCharacter">New Character</MudButton>
    </MudStack>
    @foreach (var group in CharacterList.GroupBy(character => character.Importance))
    {
        <ButtonList T="CharacterEntry" Label="@group.Key.ToString()" Items="group" PathPrefix="/characters" OnItemClick="OnCharacterSelected" />
    }
</MudStack>

@code {
    const string Title = "Characters";

    IEnumerable<CharacterEntry> CharacterList { get; set; } = [];

    protected override async Task OnInitializedAsync()
    {
        crumbHandler.Items.Clear();
        crumbHandler.Items.Add(new(Title, "/characters", Icons.Material.Filled.People));
        crumbHandler.NavigationChange?.Invoke();

        var charactersResult = await sender.Send(new GetCharacterEntriesOperation());
        CharacterList = charactersResult.Or([]);
    }

    async Task CreateNewCharacter()
    {
        var options = new DialogOptions { MaxWidth = MaxWidth.Small, FullWidth = true, BackgroundClass = "blur-background" };
        var param = new DialogParameters<NewNameDialog>();
        param.Add(dlg => dlg.NameLabel, "Character Name");

        var dialog = await dialogService.ShowAsync<NewNameDialog>("Create New Character", param, options);
        DialogResult dialogResult = await dialog.Result ?? DialogResult.Cancel();
        if (dialogResult.Canceled) return;

        string characterName = dialogResult.Data?.ToString() ?? string.Empty;
        characterName = characterName.Trim();
        if (string.IsNullOrEmpty(characterName)) return;

        var characterResult = await sender.Send(new CreateCharacterOperation(characterName));
    }

    void OnCharacterSelected(CharacterEntry character)
    {
        
    }
}
