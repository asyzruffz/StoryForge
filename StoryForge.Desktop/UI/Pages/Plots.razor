@page "/plots"
@using StoryForge.Application.Plots
@using StoryForge.Core.Data
@inject BreadCrumbHandler crumbHandler;
@inject IDialogService dialogService;
@inject ISender sender;

<PageTitle>@Title</PageTitle>
<MudText Typo="Typo.h4" Class="mb-4">@Title</MudText>

<MudStack Spacing="4">
    <MudStack Row="true" Justify="Justify.FlexEnd">
        <MudButton Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Add" Color="Color.Primary" OnClick="CreateNewPlot">New Plot</MudButton>
    </MudStack>
    @foreach (var group in PlotList.GroupBy(plot => plot.Importance))
    {
        <ButtonList T="PlotEntry" Label="@group.Key.ToString()" Items="group" PathPrefix="/plots" OnItemClick="OnPlotSelected" />
    }
</MudStack>

@code {
    const string Title = "Plots";

    IEnumerable<PlotEntry> PlotList { get; set; } = [];

    protected override async Task OnInitializedAsync()
    {
        crumbHandler.Items.Clear();
        crumbHandler.Items.Add(new(Title, "/plots", Icons.Material.Filled.Timeline));
        crumbHandler.NavigationChange?.Invoke();

        var plotsResult = await sender.Send(new GetPlotEntriesOperation());
        PlotList = plotsResult.Or([]);
    }

    async Task CreateNewPlot()
    {
        var options = new DialogOptions() { MaxWidth = MaxWidth.Small, FullWidth = true, BackgroundClass = "blur-background" };
        var param = new DialogParameters<NewNameDialog>();
        param.Add(dlg => dlg.NameLabel, "Plot Name");

        var dialog = await dialogService.ShowAsync<NewNameDialog>("Create New Plot", param, options);
        DialogResult dialogResult = await dialog.Result ?? DialogResult.Cancel();
        if (dialogResult.Canceled) return;

        string plotName = dialogResult.Data?.ToString() ?? string.Empty;
        plotName = plotName.Trim();
        if (string.IsNullOrEmpty(plotName)) return;

        var plotResult = await sender.Send(new CreatePlotOperation(plotName));
    }

    void OnPlotSelected(PlotEntry plot)
    {
        
    }
}
